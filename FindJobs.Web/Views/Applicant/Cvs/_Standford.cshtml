@using FindJobs.Domain.Dtos;
@model ApplicantDto
<div class="st-elements">
    <div class="st-sidenav">

        <input type="image" src="@Model.ApplicantImage" alt="Applicant-Image" class="ca-image" />



        <h3 class="st-text-color-whire">@Res.Cv.Personal</h3>
        <div class="st-hr-line"></div>
        <div class="st-personal-information">
            <div class="st-left-box">
                <p class="st-header">@Res.Cv.FullName</p>
                <p>@Model.FirstName  @Model.LastName</p>
            </div>


            <div class="st-left-box">
                <p class="st-header">@Res.Cv.Address</p>
                <p>@Model.Address</p>
                <p>@Model.CountryName</p>
                <p>@Model.CityName</p>
            </div>


            <div class="st-left-box">
                <p class="st-header">@Res.Cv.PhoneNumber</p>
                <p>@Model.Phone</p>
            </div>

            <div class="st-left-box">
                <p class="st-header">@Res.Cv.Email</p>
                <p>@Model.Email</p>
            </div>
        </div>


    </div>
    <div class="st-right-side">


        @if (Model.ApplicantEducations.Count > 0)
        {
            <div id="Education">
                <h3>@Res.Cv.Education</h3>
                <div class="st-hr-line-max"></div>
                <table class="st-table">
                    <tbody>
                        @foreach (var item in Model.ApplicantEducations)
                        {
                            <tr>
                                <td class="st-header-text">
                                    <p>@item.StartEducation  - @item.EndEducation</p>
                                </td>
                                <td>
                                    <p>@item.InstituteName</p>
                                    <p>@item.CourseName</p>
                                    <p>@item.EducationLevel</p>
                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        }


        @if (Model.ApplicantWorkExperiences.Count > 0)
        {
            <div id="exp">
                <h3>@Res.Cv.WorkExperincees</h3>
                <div class="st-hr-line-max"></div>
                <table class="st-table">
                    <tbody>
                        @foreach (var item in Model.ApplicantWorkExperiences)
                        {
                            <tr>
                                <td class="st-header-text">
                                    <p>@item.StartWork - @item.EndWork</p>
                                </td>
                                <td>
                                    <p>@item.JobPosition</p>
                                    <p>@item.JobTitle</p>
                                    @if (item.IsCurrentlyWorking)
                                    {
                                        <p>@Res.Cv.StillWokring</p>
                                    }
                                    else
                                    {
                                        <p>@Res.Cv.notemployed</p>
                                    }

                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        }


        @if (Model.ApplicantKnowledges.Count > 0)
        {
            <div id="knowledge">
                <h3>@Res.Cv.Knowledges</h3>
                <div class="st-hr-line-max"></div>
                <table class="st-table">
                    <tbody>
                        @foreach (var item in Model.ApplicantKnowledges)
                        {
                            <tr>
                                <td class="st-header-text">
                                    <p>@item.KnowledgeName</p>
                                </td>
                                <td>
                                    <p>@item.KnowledgeLevel</p>
                                </td>

                            </tr>

                        }

                    </tbody>
                </table>
            </div>

        }

        @if (Model.ApplicantLanguages.Count > 0)
        {
            <div id="lang">
                <h3>@Res.Cv.Languages</h3>
                <div class="st-hr-line-max"></div>
                <table class="st-table">
                    <tbody>
                        @foreach (var item in Model.ApplicantLanguages)
                        {
                            <tr>
                                <td class="st-header-text">
                                    <p>@item.LanguageName</p>
                                </td>
                                <td>
                                    <p>@item.LanguageLevel</p>
                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        }


    </div>
</div>