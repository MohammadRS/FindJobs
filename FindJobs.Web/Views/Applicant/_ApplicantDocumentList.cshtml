@using FindJobs.Domain.Dtos

@model IEnumerable<ApplicantDocumentsDto>

<table class="applicantProfiletable">

    <tbody>
        @if (Model.Count() < 1)
        {
            <tr>
                <td colspan="2">@Res.ApplicantProfile.ThereIsNoDocumentUploaded</td>

            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
              
                <td class="linkColumn">

                    <a href="@item.DocumentFileBase64" download="@item.CreateDate.ToString("yyyy-MM-dd")-@item.Type">@item.CreateDate.ToString("yyyy-MM-dd")-@item.Type</a>
                </td>
                <td>
                    <img onclick="deleteEntity(@item.Id,'DeleteApplicantDocument','Document','documentList','documentModal')" class="ApplicantProfileIcon" src="data:image/png;base64,">
                </td>
            </tr>
        }


    </tbody>
</table>

