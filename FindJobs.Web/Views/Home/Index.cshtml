@using Microsoft.Extensions.Configuration
@using FindJobs.Domain.Dtos
@inject IConfiguration Configuration
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
}
@section Css {
    <link rel="stylesheet" href="~/css/internal/top-employers.css" />
    <link rel="stylesheet" href="/dcss/internal/home/@ViewData["ColorTeal"]~@ViewData["ColorAqua"]" />

}
<div class="container">
    <div id="top_employers">
        <div class="container employer_container">
            @{
                if (ViewData["TopEmployers"] != null)
                {
                    @foreach (var item in (List<CompanyDto>)ViewData["TopEmployers"])
                    {
                        <div class="item" onmouseover="companyName(this)" onmouseout="companyLogo(this)">
                            <p style="display: none;">@item.Name</p>
                            <img style="visibility: visible" src="@item.Logo" title="@item.Name" />
                        </div>
                    }
                }
                else
                {
                    <p>Not Top Employers Exists</p>
                }
            }
        </div>
    </div>
</div>
@section Script
    {
   
    <script src="~/js/internal/topcompany.js"></script>
}