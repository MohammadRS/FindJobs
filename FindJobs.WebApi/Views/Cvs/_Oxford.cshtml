@using FindJobs.Domain.Dtos
@model ApplicantDto


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional //EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xmlns:o="urn:schemas-microsoft-com:office:office" xmlns:v="urn:schemas-microsoft-com:vml">
<head>
    <!--[if gte mso 9]><xml><o:OfficeDocumentSettings><o:AllowPNG/><o:PixelsPerInch>96</o:PixelsPerInch></o:OfficeDocumentSettings></xml><![endif]-->
    <meta content="text/html; charset=utf-8" http-equiv="Content-Type" />
    <meta content="width=device-width" name="viewport" />
    <!--[if !mso]><!-->
    <meta content="IE=edge" http-equiv="X-UA-Compatible" />
    <!--<![endif]-->
    <title></title>
    <!--[if !mso]><!-->
    <!--<![endif]-->
    <style type="text/css">

        .ox-elements {
            display: flex;
            flex-direction: row;
        }

        .ox-sidenav {
            width: 100px;
            position: unset;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: aqua;
            overflow-x: hidden;
            padding-top: 20px;
        }

        .ox-image {
            width: 5rem;
            border-radius: 136px;
            margin: 10px 3px !important;
            height: 5rem;
            object-fit: cover;
            border: 0px;
        }

        .ox-right-side {
            margin-left: 41px;
        }

        .ox-hr-line {
            width: 80%;
            border: 1px solid lightgray;
        }

        .ox-header-text {
            color: gray;
        }

        .ox-description {
            max-width: 80%;
        }

        .ox-table td {
            text-align: left;
            max-width: 200px;
            min-width: 170px;
            margin: 5px 0;
        }

        .ox-table .ox-table-min-td {
            min-width: 430px;
        }

        .ox-table {
            width: 100%;
            margin-top: 10px;
        }

            .ox-table tr {
                display: flex;
                flex-wrap: wrap;
                width: 100%;
                margin-top: 10px;
            }

            .ox-table td:last-child {
                text-align: left;
            }

    </style>
</head>
<body style="margin:0;padding:0;">

    <div class="ox-elements">
        <div class="ox-sidenav">
        </div>
        <div class="ox-right-side">
            <img src="@Model.ApplicantImage" alt="Applicant-Image" class="ox-image" />
            <div id="personal">
                <h3>@Res.Cv.Personal</h3>
                <div class="ox-hr-line"></div>
                <table class="ox-table">
                    <tbody>

                        <tr>
                            <td class="ox-header-text">@Res.Cv.FullName</td>
                            <td>@Model.FirstName @Model.LastName</td>
                        </tr>
                        <tr>
                            <td class="ox-header-text">@Res.Cv.Address</td>
                            <td>@Model.CountryName,@Model.CityName </td>
                        </tr>
                        <tr>
                            <td class="ox-header-text">@Res.Cv.PhoneNumber</td>
                            <td>@Model.Phone</td>
                        </tr>
                        <tr>
                            <td class="ox-header-text">@Res.Cv.Email</td>
                            <td>@Model.Email</td>
                        </tr>

                    </tbody>
                </table>
            </div>
            @if (Model.ApplicantEducations.Count > 0 && Model != null)
            {
                <div id="Education">
                    <h3>@Res.Cv.Education</h3>
                    <div class="ox-hr-line"></div>
                    <table class="ox-table">
                        <tbody>
                            @foreach (var item in Model.ApplicantEducations)
                            {
                                <tr>
                                    <td class="ox-header-text"><p>@item.StartEducation - @item.EndEducation</p></td>
                                    <td>
                                        <p>@item.InstituteName</p>
                                        <p>@item.CourseName</p>
                                        <p>@item.EducationLevel</p>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            }
            @if (Model.ApplicantWorkExperiences.Count > 0 && Model != null)
            {
                <div id="workExp">
                    <h3>@Res.Cv.WorkExperincees</h3>
                    <div class="ox-hr-line"></div>
                    <table class="ox-table">
                        <tbody>
                            @foreach (var item in Model.ApplicantWorkExperiences)
                            {
                                <tr>
                                    <td class="ox-header-text"><p>@item.StartWork - @item.EndWork</p></td>
                                    <td>
                                        <p>@item.JobTitle</p>
                                        <p>@item.JobPosition</p>
                                        @if (item.IsCurrentlyWorking)
                                        {
                                            <p>@Res.Cv.StillWokring</p>
                                        }
                                        else
                                        {
                                            <p>@Res.Cv.notemployed</p>
                                        }
                                    </td>

                                </tr>

                            }

                        </tbody>
                    </table>
                </div>
            }
            @if (Model.ApplicantKnowledges.Count > 0 && Model != null)
            {
                <div id="knowledge">
                    <h3>@Res.Cv.Knowledges</h3>
                    <div class="ox-hr-line"></div>
                    <table class="ox-table">
                        <tbody>
                            @foreach (var item in Model.ApplicantKnowledges)
                            {
                                <tr>
                                    <td class="ox-header-text"><p>@item.KnowledgeName</p></td>
                                    <td>
                                        <p>@item.KnowledgeLevel</p>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            @if (Model.ApplicantLanguages.Count > 0 && Model != null)
            {
                <div id="language">
                    <h3>@Res.Cv.Languages</h3>
                    <div class="ox-hr-line"></div>
                    <table class="ox-table">
                        <tbody>
                            @foreach (var item in Model.ApplicantLanguages)
                            {
                                <tr>
                                    <td class="ox-header-text"><p>@item.LanguageName</p></td>
                                    <td>
                                        <p>@item.LanguageLevel</p>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>

    </div>

</body>
</html>